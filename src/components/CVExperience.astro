---
export interface Props {
  startDate: string;
  endDate?: string;
  company: string;
  role: string;
  description: string;
  location?: string;
}

const { startDate, endDate, company, role, description, location } = Astro.props;

// Format dates for Swedish format (YYYY-MM or "Pågående")
const formatDate = (date: string) => {
  if (!date) return 'Pågående';
  return date;
};
---

<div class="experience-item">
  <div class="experience-header">
    <div class="experience-period">
      <span class="date-range">
        {formatDate(startDate)} - {endDate ? formatDate(endDate) : 'Pågående'}
      </span>
      {location && <span class="location">{location}</span>}
    </div>
    <div class="experience-details">
      <h3 class="role">{role}</h3>
      <h4 class="company">{company}</h4>
    </div>
  </div>
  <div class="experience-description">
    <p set:html={description}></p>
  </div>
</div>

<style>
  .experience-item {
    margin-bottom: 1.5rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid #e5e5e5;
  }

  .experience-item:last-child {
    border-bottom: none;
    margin-bottom: 0;
    padding-bottom: 0;
  }

  .experience-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 0.75rem;
    gap: 1rem;
  }

  .experience-period {
    min-width: 120px;
    flex-shrink: 0;
  }

  .date-range {
    display: block;
    font-size: 0.9rem;
    color: #666;
    font-weight: 500;
  }

  .location {
    display: block;
    font-size: 0.8rem;
    color: #888;
    margin-top: 0.25rem;
  }

  .experience-details {
    flex: 1;
  }

  .role {
    margin: 0 0 0.25rem 0;
    font-size: 1.1rem;
    font-weight: 600;
    color: #2c3e50;
  }

  .company {
    margin: 0;
    font-size: 1rem;
    font-weight: 500;
    color: #34495e;
  }

  .experience-description {
    margin-left: 140px;
  }

  .experience-description p {
    margin: 0;
    line-height: 1.6;
    color: #555;
  }

  @media (max-width: 768px) {
    .experience-header {
      flex-direction: column;
      align-items: flex-start;
    }

    .experience-period {
      min-width: auto;
      margin-bottom: 0.5rem;
    }

    .experience-description {
      margin-left: 0;
    }
  }
</style>
