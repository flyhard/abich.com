---
import SidebarLayout from '../layouts/SidebarLayout.astro';
import CVHeader from '../components/CVHeader.astro';
import CVSection from '../components/CVSection.astro';
import CVExperienceList from '../components/CVExperienceList.astro';
import CVSkills from '../components/CVSkills.astro';

---

<SidebarLayout title="Per Abich">
</SidebarLayout>

<style>
  .cv-container {
    max-width: 800px;
    margin: 0 auto;
    font-family: 'Georgia', 'Times New Roman', serif;
    line-height: 1.6;
    color: #333;
  }

  .cv-content {
    display: flex;
    flex-direction: column;
    gap: 2.5rem;
  }

  @media print {
    .cv-container {
      max-width: none;
      font-size: 12px;
    }

    .cv-content {
      gap: 1.5rem;
    }
  }
</style>
